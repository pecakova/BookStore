@model IEnumerable<BookStore.Models.UserBooks>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-family: 'Helvetica', sans-serif; font-weight: bold; color: lightcoral; border-bottom: 2px solid lightcoral;">Your Books</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.Book.Title)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img height="150px" src="@Html.DisplayFor(modelItem => item.Book.FrontPage)" alt="Book cover">
                </td>
                <td>@Html.DisplayFor(modelItem => item.Book.Title)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Book.Id"><i class="fa-solid fa-circle-info" style="color: #df665d; font-size: 27px"></i></a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <p></p>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash" style="color: #df665d; font-size: 27px"></i></a>
                    }
             
                </td>
            </tr>
        }
    </tbody>
</table>