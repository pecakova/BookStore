@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}


    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <h2 style="text-align: center; font-family: 'Helvetica', sans-serif; font-weight: bold; color: lightcoral; border-bottom: 2px solid lightcoral;">Best Sellers</h2>
    <table style="width: 100%; table-layout: fixed; border-collapse: collapse;">
    <thead style="background-color: lightcoral; color:white;">
            <tr>
                <th style="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.YearPublished)
                </th>
                <th style="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.NumPages)
                </th>
                <th style ="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>
                <th style="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.FrontPage)
                </th>
                <th style="margin-left: 3px; padding:2px;">
                    @Html.DisplayNameFor(model => model.DownloadUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="heigh:500px; font-family:'Times New Roman', Times, serif; font-size: 9px; border-bottom: 2px solid lightcoral; margin-left:3px; padding: 2px; text-align:left;">
                    <td>
                        <h5 style="font-size: 20px; font-family: 'Times New Roman', serif; font-weight: bold; text-decoration: underline;">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <img style="height: 200px; width: 130px;" src="@Html.DisplayFor(modelItem => item.FrontPage)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearPublished)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumPages)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FrontPage)
                    </td>
                    <td>
                      <a href="@Html.DisplayFor(modelItem => item.DownloadUrl)">Download</a>
                    </td>
                    <td>
                        @if (item.Author != null)
                        {
                            @Html.DisplayFor(modelItem => item.Author.FullName)
                        }

                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
